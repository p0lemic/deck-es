{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="columns is-centered">
        <div class="column is-half">
            {% if error is defined %}
                <div class="notification is-danger">{{ error }}</div>
            {% endif %}
            <form class="form-signin" name="signUp" action="{{ path('api.user.signup') }}" method="post">
                <img class="mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                {% if error is defined %}
                    <div>{{ error }}</div>
                {% endif %}
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="email" class="form-control" placeholder="Email address" required="true" autofocus="" name="email">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Password" required="true" name="password">
                <button class="btn btn-lg btn-primary btn-block" type="submit" value="Send">Sign up</button>
            </form>
        </div>
    </div>
</div>
{% endblock body %}
